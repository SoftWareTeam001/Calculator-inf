<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/CalFirstMain">

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webview"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:foreground="@drawable/mybutton"
            android:background="@drawable/show_border">
            <LinearLayout
                android:id="@+id/ModeTag"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/MainMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAL "
                    android:textColor="@color/textColor" />
                <TextView
                    android:id="@+id/DrgeeMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DEG "
                    android:textColor="@color/textColor"/>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/MainShow"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                android:orientation="vertical">
                <com.example.test.calculatorinf.FormulaView
                    android:id="@+id/Formula"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <TextView
                    android:id="@+id/Result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColor"
                    android:textDirection="rtl"
                    android:textSize="32sp"
                    android:layout_alignParentBottom="true"
                    android:maxLines="1"
                    android:scrollbars="horizontal"
                    />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="20"
            android:id="@+id/KeyBoard"
            android:orientation="vertical"
            android:foreground="@drawable/mybutton"
            android:background="@color/black">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <com.example.test.calculatorinf.MyButton
                    android:id="@+id/BtnShift"
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/shift" />
                <Button
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/forward"
                    android:id="@+id/BtnForwar"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/direction_up"
                    android:id="@+id/DirectionUp"/>
                <Button
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/back"
                    android:id="@+id/BtnBack"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/delete"
                    android:id="@+id/Delete"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/clear"
                    android:id="@+id/Clear"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/direction_left"
                    android:id="@+id/DirectionLeft"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/direction_down"
                    android:id="@+id/DirectionDown"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/direction_right"
                    android:id="@+id/DirectionRight"/>
                <com.example.test.calculatorinf.MyButton
                    style="@style/BlueButton"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/history"
                    android:id="@+id/History"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/cros"
                    android:id="@+id/Cross"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/dot"
                    android:id="@+id/Ln"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/det"
                    android:id="@+id/Sin"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/eigen"
                    android:id="@+id/Cos"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/cramer"
                    android:id="@+id/Tan"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <Button
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/ni"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/zhuanzhi"
                    android:id="@+id/Square"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/square_root"
                    android:id="@+id/SquareRoot"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/left_brackets"
                    android:id="@+id/LeftBrackets"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/right_brackets"
                    android:id="@+id/RightBrackets"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_seven"
                    android:id="@+id/NumberSeven"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_eight"
                    android:id="@+id/NumberEight"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_nine"
                    android:id="@+id/NumberNine"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/multiply"
                    android:id="@+id/Multiply"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/divide"
                    android:id="@+id/Divide"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_four"
                    android:id="@+id/NumberFour"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_five"
                    android:id="@+id/NumberFive"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/number_six"
                    android:id="@+id/NumberSix"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/add"
                    android:id="@+id/Add"/>
                <com.example.test.calculatorinf.ShowButton
                    style="@style/Common"
                    android:foreground="@drawable/mybutton"
                    android:background="@mipmap/minus"
                    android:id="@+id/Minus"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="4">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:orientation="horizontal"
                        android:layout_weight="1">
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/number_one"
                            android:id="@+id/NumberOne" />
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/number_two"
                            android:id="@+id/NumberTwo"/>
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/number_three"
                            android:id="@+id/NumberThree"/>
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/res"
                            android:id="@+id/Res"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/number_zero"
                            android:id="@+id/NumberZero"/>
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/point"
                            android:id="@+id/Point"/>
                        <com.example.test.calculatorinf.ShowButton
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/ten_to_power"
                            android:id="@+id/TenToPower"/>
                        <Button
                            style="@style/Common"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/to_fraction"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1">
                        <com.example.test.calculatorinf.MyButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/mode"
                            android:id="@+id/Menu"/>
                        <Button
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/converter"/>

                        <com.example.test.calculatorinf.MyButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@mipmap/num1234"
                            android:foreground="@drawable/mybutton"
                            android:id="@+id/NewMat"/>
                        <com.example.test.calculatorinf.MyButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:foreground="@drawable/mybutton"
                            android:background="@mipmap/change_view"
                            android:onClick="ChangePage"/>

                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                    <com.example.test.calculatorinf.MyButton
                        style="@style/Common"
                        android:foreground="@drawable/mybutton"
                        android:background="@mipmap/equal"
                        android:id="@+id/Equal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>